# Hostinger FTP Configuration
# Copy this file to .env and fill in your actual values

# Get your FTP IP from Hostinger hPanel (NOT the domain name!)
# It will look like: 185.28.21.XXX or similar
FTP_HOST=185.212.71.198

# FTP Port (use 21 for FTP, 65002 for SFTP on Premium plans)
FTP_PORT=21

# Your Hostinger username (format: u12345678.SupplySide or u12345678.domain)
FTP_USER=u921052894.SupplySide

# Your FTP password
FTP_PASS=your_ftp_password_here

# Remote directory (usually /public_html for main domain)
REMOTE_PATH=/public_html

# Local directory to deploy from
LOCAL_PATH=./

# Deployment mode (production/staging/test)
DEPLOYMENT_MODE=production

# Cache settings
CLEAR_CACHE=true
CACHE_TIMEOUT=300

# Debug mode (true/false)
DEBUG=false

# Backup settings
CREATE_BACKUP=true
BACKUP_RETENTION_DAYS=7