# Hostinger FTP Configuration
# Copy this file to .env and fill in your actual values

# Get your FTP IP from Hostinger hPanel (NOT the domain name!)
# It will look like: 185.28.21.XXX or similar
FTP_HOST=YOUR_FTP_IP_FROM_HPANEL

# FTP Port (use 21 for FTP, 65002 for SFTP on Premium plans)
FTP_PORT=21

# Your Hostinger username (format: u12345678 or u12345678.domain)
FTP_USER=u921052894.SupplySide

# Your FTP password
FTP_PASS=your_ftp_password_here

# Remote directory (usually /public_html for main domain)
FTP_REMOTE_ROOT=/home/u921052894/domains/mediumblue-chamois-837591.hostingersite.com/public_html

# Local directory to deploy from
LOCAL_ROOT=./

# Deployment settings
FTP_TIMEOUT=300000
FTP_KEEPALIVE=30000
FTP_MAX_CONNECTIONS=3
FTP_RETRY_ATTEMPTS=5
FTP_RETRY_DELAY=15000

# Debug mode (true/false)
DEBUG_MODE=true